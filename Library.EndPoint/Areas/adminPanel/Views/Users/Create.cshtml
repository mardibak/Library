@*@page*@
@using LI.ApplicationContracts.UserContracts;
@model UserDto

@{
    ViewData["Title"] = "Create";
    //ViewData["ActivePage"] = ManageNavPages.Index;
}

@*<partial name="_StatusMessage" for="StatusMessage" />*@
<a asp-action="Index" class="btn btn-secondary">Back</a>
<h1 class="bg-info text-white">Create User</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-area="adminPanel" asp-controller="Users" asp-action="Create" id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="form-control"></label>
                <input asp-for="FirstName" class="form-label" />
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="form-control"></label>
                <input asp-for="LastName" class="form-label" />
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="form-control"></label>
                <input asp-for="BirthDate" class="form-label" />
            </div>
            <div class="form-floating">
                <input asp-for="UserName" class="form-control" disabled />
                <label asp-for="UserName" class="form-label"></label>
            </div>

            <div class="form-floating">
                <input asp-for="Email" class="form-control" />
                <label asp-for="Email" class="form-label"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Save</button>

        </form>
    </div>
</div>
