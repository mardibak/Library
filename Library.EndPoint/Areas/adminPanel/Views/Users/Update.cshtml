@using LI.ApplicationContracts.UserContracts;
@model UpdateUserDto

@{
    ViewData["Title"] = "Update";
}

<h1 class="bg-info text-white">Update User</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Users" asp-action="Update" asp-area="adminPanel" id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-text" />
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-text" />
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="form-label"></label>
                <input asp-for="BirthDate" class="form-text" />
            </div>
            <div class="form-floating">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-text" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="form-label">Password</label>
                <input type="text" asp-for="Password" class="form-text" maxlength="500">
                <span asp-validation-for=Password></span>
            </div>
            <div class="form-floating">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-text" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <br />
            <div>
                <input type="hidden" asp-for="Id" value="@Model.Id" />

                <a asp-action="Index" class="btn btn-secondary">Back</a>
                <button type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
            </div>

        </form>
    </div>
</div>
