@using LibIdentity.DomainContracts.UserContracts;
@model UpdateUserViewModel

@{
    ViewData["Title"] = "Update";
}

<div class="card border-primary">
    <div class="card-body">
        <h5 class="card-title m-3">Update User</h5>
        <form asp-controller="Users" asp-action="Update" asp-area="adminPanel" id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="input-group">
                <span class="input-group-text">First and last name</span>
                <input asp-for="FirstName" type="text" aria-label="First name" placeholder="Firstname" class="form-control" required maxlength="50">
                <input asp-for="LastName" type="text" aria-label="Last name" placeholder="Lastname" class="form-control" required maxlength="50">
                <span asp-validation-for=FirstName></span>
                <span asp-validation-for=LastName></span>
            </div>
            <div class="form-group mt-3 mb-3">
                <label asp-for="BirthDate" class="form-label"></label>
                <input asp-for="BirthDate" type="date" class="form-control" />
                <span asp-validation-for=BirthDate></span>
            </div>

            <div class="input-group flex-nowrap mb-3">
                <span class="input-group-text" id="addon-wrapping">@@</span>
                <input type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="addon-wrapping" asp-for="UserName" required maxlength="50">
                <span asp-validation-for=UserName></span>
            </div>
            <div class="input-group mt-3">
                <span class="input-group-text">Password and Confirm</span>
                <input type="password" asp-for="Password" class="form-control" placeholder="Password" maxlength="100" required>
                <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" maxlength="100" required>
                <span asp-validation-for="Password" class="text-danger"></span>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" asp-for="Email" class="form-label"></label>
                <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required />
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
