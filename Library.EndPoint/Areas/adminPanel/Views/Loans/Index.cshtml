@using LendBook.ApplicationContract.Lend;
@model List<LendDto>

@{
    ViewData["Title"] = "Loan Management";
}

<div class="row">
    <div class="col-sm-12">
        <p class="pull-left">
            <a class="btn btn-primary btn-lg" asp-action="Create">Create Loan</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title pull-right">@ViewData["Title"]</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>BookID</th>
                                    <th>Member ID</th>
                                    <th>Employee ID</th>
                                    <th>Loan Date</th>
                                    <th>Ideal Return Date</th>
                                    <th>Return Employee ID</th>
                                    <th>Return Date</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>

                                        <td>@item.BookId</td>
                                        <td>@item.MemberID</td>
                                        <td>@item.EmployeeId</td>
                                        <td>@item.LoanDate</td>
                                        <td>@item.IdealReturnDate</td>
                                        <td>@item.ReturnEmployeeID</td>
                                        <td>@item.ReturnDate</td>
                                        <td>@item.Description</td>
                                        <td>
                                            <a class="btn btn-success pull-right m-rl-5" asp-action="Update" asp-route-id="@item.Id">
                                                <i class="fa fa-edit"></i>Update
                                            </a>
                                            <a class="btn btn-warning pull-right m-rl-5" asp-action="Delete" asp-route-id="@item.Id">
                                                <i class="fa fa-remove"></i>Delete
                                            </a>
                                            <a class="btn btn-info pull-right m-rl-5" asp-action="Details" asp-route-id="@item.Id">
                                                <i class="fa fa-info"></i>Details
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>