                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <!-- ... (your existing table headers) ... -->
                            <tbody>
                                @foreach (var item in Model.Loans.Items)
                                {
                                    <!-- ... (your existing table rows) ... -->
                                }
                                <tr>
                                    <td colspan="10">
                                        <nav aria-label="Page navigation">
                                            <ul class="pagination">
                                                @if (Model.Loans.HasPreviousPage)
                                                {
                                                    <li class="page-item">
                                                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.Loans.PageIndex - 1)" asp-route-SearchModel="@Model.SearchModel">Previous</a>
                                                    </li>
                                                }
                                                @for (int i = 1; i <= Model.Loans.TotalPages; i++)
                                                {
                                                    <li class="page-item @(i == Model.Loans.PageIndex ? "active" : "")">
                                                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-SearchModel="@Model.SearchModel">@i</a>
                                                    </li>
                                                }
                                                @if (Model.Loans.HasNextPage)
                                                {
                                                    <li class="page-item">
                                                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.Loans.PageIndex + 1)" asp-route-SearchModel="@Model.SearchModel">Next</a>
                                                    </li>
                                                }
                                            </ul>
                                        </nav>
                                    </td>
                                </tr>
                            </tbody>
