@using LibBook.DomainContracts.Borrow;
@model LoanDto

@{
    ViewData["Title"] = "Details";
}

<h1>Borrow Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MemberId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MemberName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmployeeId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmployeeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdealReturnDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdealReturnDate)
        </dd>
    </dl>
    <hr />
    <h1>Return Details</h1>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReturnEmployeeId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReturnEmployeeId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReturnDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReturnDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="Details">
        <input type="hidden" asp-for="Id" />
        @* <input type="submit" value="Delete" class="btn btn-danger" disabled /> *@
        <input type="submit" value="SoftDelete" class="btn btn-warning" />

        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        <a asp-action="Update" asp-route-id="@Model?.Id" class="btn btn-success">Update</a>
    </form>

</div>
