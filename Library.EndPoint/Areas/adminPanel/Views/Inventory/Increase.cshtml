@using LibInventory.DomainContracts.Inventory;
@model IncreaseInventory
@{
    ViewData["Title"] = "Increase";
}

<h1 class="bg-info text-white">Increase</h1>
<div class="row">
    <div class="col-md-6">

        <form asp-controller="Inventory" asp-action="Increase" method="post">
            <div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Count" class="control-label">Number</label>
                            <input class="form-control" asp-for="Count" />
                            <span asp-validation-for="Count" class="error"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Description</label>
                            <textarea row="3" class="form-control" asp-for="Description"></textarea>
                            <span asp-validation-for="Description" class="error"></span>
                        </div>
                    </div>
                </div>
                <input type="hidden" asp-for="InventoryId" value="@Model.InventoryId" />
            </div>
            <div>
                <a class="btn btn-default waves-effect" asp-controller="Inventory" asp-action="Index">Back</a>
                <button type="submit" class="btn btn-info waves-effect waves-light">Increase</button>
            </div>
        </form>

    </div>
</div>
