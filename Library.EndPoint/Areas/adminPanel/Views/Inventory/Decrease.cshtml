@using LibInventory.DomainContracts.Inventory;
@model DecreaseInventory
@{
    ViewData["Title"] = "Decrease";
}

<h1 class="bg-info text-white">Decrease</h1>
<div class="row">
    <div class="col-md-6">

        <form asp-controller="Inventory" asp-action="Decrease" method="post">
            <div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Count" class="control-label">Number</label>
                            <input class="form-control" asp-for="Count" />
                            <span asp-validation-for="Count" class="error"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Description</label>
                            <textarea type="text" class="form-control" asp-for="Description"></textarea>
                            <span asp-validation-for="Description" class="error"></span>
                        </div>
                    </div>
                </div>
                <input type="hidden" asp-for="InventoryId" value="@Model.InventoryId" />
            </div>
            <div>
                <a class="btn btn-default waves-effect" asp-controller="Inventory" asp-action="Index">Back</a>
                <button type="submit" class="btn btn-info waves-effect waves-light">Decrease</button>
            </div>
        </form>
    </div>
</div>