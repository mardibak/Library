@using LibInventory.DomainContracts.Inventory;
@model CreateInventory

@{
    ViewData["Title"] = "Create";
}

<h1 class="bg-info text-white">Create Inventory</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Inventory" asp-action="Create" method="post">

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                        <label asp-for="BookId" class="control-label">Choose a Book</label>
                            <select class="form-control" asp-for="BookId"
                                    asp-items='new SelectList(Model.Books, "Id", "Title")'>
                                <option value="">انتخاب محصول</option>
                            </select>
                            <span asp-validation-for="BookId" class="error"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                        <label asp-for="UnitPrice" class="control-label">Unit Price</label>
                            <input type="text" class="form-control" asp-for="UnitPrice" required>
                            <span asp-validation-for="UnitPrice" class="error"></span>
                        </div>
                    </div>
                </div>

            <div>
                <a class="btn btn-secondary waves-effect" asp-controller="Inventory" asp-action="Index">Back</a>
                <button type="submit" class="btn btn-info waves-effect waves-light">Create</button>
            </div>
        </form>

    </div>
</div>
