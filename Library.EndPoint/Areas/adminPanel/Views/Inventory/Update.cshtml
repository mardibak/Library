@using BI.ApplicationContracts.Inventory;
@model EditInventory

@{
    ViewData["Title"] = "Update";
}

<h1 class="bg-info text-white">Create Inventory</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Inventory" asp-action="Update" method="post">

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="BookId" class="control-label">انتخاب محصول</label>
                        <select class="form-control" asp-for="BookId"
                                asp-items='new SelectList(Model.Books, "Id", "Title")'>
                            <option value="">انتخاب محصول</option>
                        </select>
                        <span asp-validation-for="BookId" class="error"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="UnitPrice" class="control-label">قیمت واحد</label>
                        <input type="text" class="form-control" asp-for="UnitPrice">
                        <span asp-validation-for="UnitPrice" class="error"></span>
                    </div>
                </div>
            </div>
            <input type="hidden" asp-for="Id" value="@Model.Id" />

            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
                <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
            </div>
        </form>
    </div>
</div>