<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title pull-right">@ViewData["Title"]</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>

                                    <th>Title</th>
                                    <th>ISBN</th>
                                    <th>Code</th>
                                    <th>Description</th>
                                    <th>Category</th>

                                    <th>Operations</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>

                                        <td>@item.Title</td>
                                        <td>@item.ISBN</td>
                                        <td>@item.Code</td>
                                        <td>@item.Description</td>
                                        <td>@item.Category</td>
                                        <td>
                                            <a class="btn btn-success pull-right m-rl-5" asp-action="Update" asp-route-id="@item.Id">
                                                <i class="fa fa-edit"></i>Update
                                            </a> 
                                            <a class="btn btn-success pull-right m-rl-5" asp-action="Edit" asp-route-id="@item.Id">
                                                <i class="fa fa-edit"></i>Edit
                                            </a>
                                            <a class="btn btn-warning pull-right m-rl-5" asp-action="Delete" asp-route-id="@item.Id">
                                                <i class="fa fa-remove"></i>Delete
                                            </a>
                                            <a class="btn btn-info pull-right m-rl-5" asp-action="Details" asp-route-id="@item.Id">
                                                <i class="fa fa-info"></i>Details
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>