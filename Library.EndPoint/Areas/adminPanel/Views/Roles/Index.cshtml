@using LI.ApplicationContracts.RoleContracts;
@model List<RoleDto>

@{
    ViewData["Title"] = "Index";
}
<div>
    <a asp-controller="Roles" asp-action="Create" class="btn btn-primary">
        Add Role <i class="fa fa-plus"></i>
    </a>
</div>
<br />

<table class="table table-bordered table-striped">
    <tr>
        <th>Role Name</th>
        <th>Details</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>
                <a asp-controller="Roles" asp-action="Update" asp-route-id="@item.Id">Edit</a>
                |
                <a asp-controller="Roles" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>