@using Library.EndPoint.Areas.Identity.Models;
@model MailData

@{
    ViewData["Title"] = "Send Mail";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="bg-info text-white">@ViewData["Title"]</h1>

        <form asp-controller="Emails" asp-action="SendMail" method="post">
            <span class="alert-info">@ViewBag.Message</span>

            <div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="To" class="control-label">To: </label>
                            <input type="text" class="form-control" asp-for="To">
                            <span asp-validation-for="To" class="error"></span>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Subject" class="control-label">Subject: </label>
                            <input type="text" class="form-control" asp-for="Subject">
                            <span asp-validation-for="Subject" class="error"></span>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group no-margin">
                            <label asp-for="Body" class="control-label">Body: </label>
                            <textarea class="form-control autogrow" asp-for="Body"
                                      style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                            <span asp-validation-for="Body" class="error"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="From" class="control-label">From: </label>
                            <input type="text" class="form-control" asp-for="From">
                            <span asp-validation-for="From" class="error"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DisplayName" class="control-label">DisplayName: </label>
                            <input type="text" class="form-control" asp-for="DisplayName">
                            <span asp-validation-for="DisplayName" class="error"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ReplyTo" class="control-label">ReplyTo: </label>
                            <input type="text" class="form-control" asp-for="ReplyTo">
                            <span asp-validation-for="ReplyTo" class="error"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ReplyToName" class="control-label">ReplyToName: </label>
                            <input type="text" class="form-control" asp-for="ReplyToName">
                            <span asp-validation-for="ReplyToName" class="error"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Bcc" class="control-label">Bcc: </label>
                            <input type="text" class="form-control" asp-for="Bcc">
                            <span asp-validation-for="Bcc" class="error"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Cc" class="control-label">Cc: </label>
                            <input type="text" class="form-control" asp-for="Bcc">
                            <span asp-validation-for="Cc" class="error"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Attachments" class="control-label">File Attachment: </label>
                            <input type="file" class="form-control" asp-for="Attachments">
                            <span asp-validation-for="Attachments" class="error"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                <a class="btn btn-default waves-effect" asp-action="Index">Back</a>
                <button type="submit" class="btn btn-info waves-effect waves-light">Send</button>
            </div>
        </form>
    </div>
</div>
