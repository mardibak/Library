@using Warehouse.Application.DTOs.InventoryOperation
@model DecreaseInventory
@{
    ViewData["Title"] = "Decrease";
}

<div class="card border-primary">
    <div class="card-body">
        <h5 class="card-title">Decrease Item</h5>
        <div class="card-text m-2">The number of copies you want to decrease from the book inventory</div>
        <form asp-controller="Inventory" asp-action="Decrease" method="post">
            <div class="form-group">
                <label asp-for="Count" class="control-label">Count</label>
                <input class="form-control" asp-for="Count" required/>
                <span asp-validation-for="Count" class="error"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea type="text" class="form-control" asp-for="Description" required></textarea>
                <span asp-validation-for="Description" class="error"></span>
            </div>
            <input type="hidden" asp-for="InventoryId" value="@Model.InventoryId" />
            <div class="p-2">
                <a class="btn btn-secondary waves-effect" asp-controller="Inventory" asp-action="Index">Back</a>
                <button type="submit" class="btn btn-info waves-effect waves-light">Decrease</button>
            </div>
        </form>
    </div>
</div>