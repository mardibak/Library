@    using Library.Application.DTOs.Author;
    using Library.Application.DTOs.Authors;
@model List<AuthorDto>

@{
    ViewData["Title"] = "Book Author";
}

<div class="row">
    <div class="col-sm-12">
        <p class="pull-left">
            <a class="btn btn-primary btn-lg" asp-action="Create">Create Author</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Operations</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>

                                        <td>@item.Name</td>
                                        <td>@item.Description</td>
                                        <td>
                                            <a class="btn btn-success pull-right m-rl-5" asp-action="Update" asp-route-id="@item.Id">
                                                <i class="fa fa-edit"></i>Update
                                            </a>
                                            <a class="btn btn-warning pull-right m-rl-5" asp-action="Delete" asp-route-id="@item.Id">
                                                <i class="fa fa-edit"></i>Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>