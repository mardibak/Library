@using Library.EndPoint.MVC.Areas.adminPanel.Models;
@model UpdateBorrowViewModel
@{
    ViewData["Title"] = "Update Lend";
}

<div class="row">
    <div class="col-md-6">

        <form asp-action="Update" method="post">
            <div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Borrow.MemberId" class="control-label">Choose a Member</label>
                            <select class="form-control" asp-for="Borrow.MemberId"
                                    asp-items='new SelectList(Model.Members, "Id", "UserName")'>
                                <option value="Borrow.MemberId">Choose a Member</option>
                            </select>
                            <span asp-validation-for="Borrow.MemberId" class="error"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Borrow.BookId" class="control-label">Choose a Book</label>
                            <select class="form-control" asp-for="Borrow.BookId"
                                    asp-items='new SelectList(Model.Books, "Id", "Title")'>
                                <option value="Borrow.BookId">Choose a Book</option>
                            </select>
                            <span asp-validation-for="Borrow.BookId" class="error"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Borrow.EmployeeId" class="control-label">Employee</label>
                            <input type="text" class="form-control" asp-for="Borrow.EmployeeId" readonly>
                            <span asp-validation-for="Borrow.EmployeeId" class="error"></span>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Borrow.CreationDate" class="control-label">Borrow Date</label>
                            <input type="text" class="form-control" asp-for="Borrow.CreationDate" readonly>
                            <span asp-validation-for="Borrow.CreationDate" class="error"></span>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Borrow.IdealReturnDate" class="control-label">Ideal Return Date</label>
                            <input type="text" class="form-control" asp-for="Borrow.IdealReturnDate" readonly>
                            <span asp-validation-for="Borrow.IdealReturnDate" class="error"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Borrow.ReturnEmployeeID" class="control-label">Return Employee</label>
                                <input type="text" class="form-control" asp-for="Borrow.ReturnEmployeeID" readonly>
                                <span asp-validation-for="Borrow.ReturnEmployeeID" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Borrow.ReturnDate" class="control-label">Return Date</label>
                                <input type="text" class="form-control" asp-for="Borrow.ReturnDate" readonly>
                                <span asp-validation-for="Borrow.ReturnDate" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Borrow.Description" class="control-label">Description</label>
                                <textarea class="form-control autogrow" asp-for="Borrow.Description"
                                          style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                                <span asp-validation-for="Borrow.Description" class="error"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <input type="hidden" asp-for="Borrow.Id" value="@Model.Borrow.Id" />

            </div>
            <div>
                <a class="btn btn-default " asp-action="Index">Back</a>
                <button type="submit" class="btn btn-info waves-effect waves-light">Update</button>
            </div>
        </form>
    </div>
</div>